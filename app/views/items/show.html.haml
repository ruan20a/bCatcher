%p#notice= notice

%a{href: @item.source_url}
  %img#image-url{src: @item.image_url}
/ %p
/   %b User:
/   = @item.user_id
.item-category
  %b Category:
  = @item.category.name
.item-title
  = @item.title
  / image source not here
.item-original_price
  %b Original Price:
  = currency(@item.price)
- if @item.price != @item.current_price
  .item-current-price
    %b Current Price:
    = currency(@item.current_price)
.item-required-price
  %b Required Price:
  = currency(@item.required_price)
-if @item.size != ""
  .item-size
    %b Size:
    = @item.size
-if @item.color != ""
  .item-color
    %b Color:
    = @item.color
-if @item.notes != ""
  .item-notes
    %b Notes:
    = @item.notes

= link_to 'Edit', edit_item_path(@item)
\|
= link_to 'Back', user_path(@item.user)
