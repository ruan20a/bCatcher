%p#notice= notice
#my-item
- @user.items.each do |item|
  .item-name
    = item.title
  .item-email
    %b Category:
    = item.category["name"]
  .item-image
    - image = item.image_url
    %img#image-url{src: image}
  .item-price
    %b Price:
    = currency(item.price)
  .item-sale-price
    %b Sale Price:
    = currency(item.sale_price)
  .item-required-price
    %b Required Price:
    = currency(item.required_price)
  .item-size
    %b Size:
    = item.size
  .item-color
    %b Color:
    = item.color
  .item-notes
    %b Notes:
    = item.notes
  .item-change
    %b change:
    = item.is_change
  .item-private
    %b private:
    = item.is_private
  .item-buttons
    = button_to "Edit", edit_item_path(item), :method => :get
    = button_to "Delete", item_path(item), :method => :delete


= link_to 'Edit', edit_user_path(@user)
\|
= link_to 'Back', users_path
